#!/bin/sh -efu

. gb-sh-conf

id="$1"; shift

cd "$GB_TASKS/$id"
enable -f /usr/lib/bash/lockf lockf
# obtain an exclusive lock on the TASKS structure
builtin lockf -v .

seq=$(cat task/seq)
[ -n "$seq" ] && [ "$(($seq%3))" -eq 1 ] ||
	{ echo >&2 "Task $id is not selected for run"; exit 1; }

(
	umask 002
	exec >>task/log 2>&1
	[ -s task/log ] &&
		echo "Resuming task $id on $(date)" ||
		echo "Starting task $id on $(date)"
	set -x
	gb-task-pkgtar
	gb-task-build
	gb-task-check-build
	gb-task-repo-plan
	gb-task-repo-vercheck
	gb-task-repo-unmets
	gb-task-check-acl
)

rc=$?

seq=$(cat task/seq)
seq=$(($seq+1))
echo "$seq" >task/seq

mutt -x -s "[$(cat task/repo)] task=$id rc=$rc" -a task/log "git_$(cat task/owner)" </dev/null

# for girar-builder
echo >&2 rc=$rc

exit $rc
