#!/bin/sh -efu

. gb-sh-setup
id="$1"; shift

cd "$GIRAR_TASKS/$id"
enable -f /usr/lib/bash/lockf lockf
builtin lockf -v .

(
	exec >>task/log 2>&1
	[ -s task/log ] &&
		echo "Resuming on $(date)" ||
		echo "Starting on $(date)"
	set -x
	gb-task-pkgtar
	gb-task-build
	gb-task-check-build
	gb-task-repo-plan
	gb-task-repo-vercheck
	gb-task-repo-unmets
	gb-task-acl
)

rc=$?

seq=$(cat task/seq)
seq=$(($seq+1))
echo "$seq" >task/seq

# for girar-builder
echo >&2 rc=$rc
