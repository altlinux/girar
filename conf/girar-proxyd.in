#!/bin/sh
#
# chkconfig: - 95 05
# description: \
#	The girar @RUN_AS@ proxy daemon.
#
# processname: girar-proxyd-@RUN_AS@

WITHOUT_RC_COMPAT=1

# Source function library.
. /etc/init.d/functions

SOCKDIR='@SOCKDIR@'
SOCKGRP='@SOCKGRP@'
PATH="$PATH:@CMD_DIR@"
EXE=girar-proxyd-@RUN_AS@
LOCKFILE=/var/lock/subsys/"$EXE"
RUN_AS=@RUN_AS@
RETVAL=0

start()
{
	install -d -g "$SOCKGRP" -m710 -- "$SOCKDIR" &&
	start_daemon --lockfile "$LOCKFILE" --expect-user "$RUN_AS" -- "$EXE"
	RETVAL=$?
	return $RETVAL
}

stop()
{
	stop_daemon --lockfile "$LOCKFILE" --expect-user "$RUN_AS" "$EXE"
	RETVAL=$?
	return $RETVAL
}

restart()
{
	stop
	start
}

# See how we were called.
case "$1" in
	start)
		start
		;;
	stop)
		stop
		;;
	reload|restart)
		restart
		;;
	condstop)
		if [ -e "$LOCKFILE" ]; then
			stop
		fi
		;;
	condrestart|condreload)
		if [ -e "$LOCKFILE" ]; then
			restart
		fi
		;;
	status)
		status --expect-user "$RUN_AS" "$EXE"
		RETVAL=$?
		;;
	*)
		msg_usage "${0##*/} {start|stop|restart|condstop|condrestart|status}"
		RETVAL=1
esac

exit $RETVAL
