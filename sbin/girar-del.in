#!/bin/sh -e

export IFS=' 	
'
export PATH=/sbin:/usr/sbin:/bin:/usr/bin

. "@CMDDIR@/girar-sh-functions"
. shell-quote

usage()
{
	echo "$PROG: $*" >&2
	echo "usage: $PROG <NAME>"
	exit 1
}

set_name "$1"
shift

IT_NAME="@USER_PREFIX@$NAME"
REAL_HOME="@GIRAR_HOME@/$NAME"
AUTH="/etc/openssh/authorized_keys/$IT_NAME"
EMAIL_DIR="@GIRAR_EMAIL_DIR@/packages/$NAME"

userdel -- "$IT_NAME" ||
	fatal "$IT_NAME: failed to remove user"

rm -f -- "$AUTH" ||
	message "$IT_NAME: failed to remove authorized keys file '$AUTH'"

for d in "$REAL_HOME" "$EMAIL_DIR"; do
	rm -rf -- "$d" ||
		message "$IT_NAME: failed to remove $d"
done

Q_IT_NAME="$(quote_sed_regexp "$IT_NAME")"
Q_NAME="$(quote_sed_regexp "$NAME")"

subst "/^$Q_IT_NAME:[[:space:]]\+$Q_NAME@@EMAIL_DOMAIN@.*\$/d" "@GIRAR_EMAIL_ALIASES@" &&
	newaliases ||
	message "$IT_NAME: failed to remove email alias"
