#!/bin/sh -efu

. gb-sh-repo-conf

# Use a fixed path so that genpkglist md5cache works.
repo=$TMPDIR/gb-repo
rm -rf "$repo"
mkdir "$repo"

cp -prs $GB_REPO_DIR/{i586,x86_64,noarch} $repo/

. tmpdir.sh

for arch in i586 x86_64; do
	cat >$TMPDIR/$arch-sources.list <<EOF
rpm file:$repo $arch classic
rpm file:$repo noarch classic
EOF
	unmets -s $TMPDIR/$arch-sources.list >$TMPDIR/$arch-unmets.old
done

while read -r N EVR A F; do
	rm $repo/$A/RPMS.classic/$F
done <plan/rm-bin

findbin()
{
	local f="$1"; shift
	set +f
	set -- build/*/*/rpms/$f
	if [ -f "$1" ]; then
		echo "$1"
		return
	else
		echo >&2 " *** cannot find $f under build/"
		return 1
	fi
}

while read -r N EVR A F; do
	bin=$(findbin "$F")
	ln -s $PWD/$bin $repo/$A/RPMS.classic/$F
done <plan/add-bin

rm -r $repo/{i586,x86_64,noarch}/SRPMS.classic
rm -r $repo/{i586,x86_64,noarch}/base
for arch in i586 x86_64 noarch; do
	mkdir $repo/$arch/base
	genbasedir --topdir=$repo --no-oldhashfile --bz2only --mapi $arch classic
done

for arch in i586 x86_64; do
	unmets -s $TMPDIR/$arch-sources.list >$TMPDIR/$arch-unmets.new
done

rc=0

for arch in i586 x86_64; do
	comm -13 $TMPDIR/$arch-unmets.{old,new} >$TMPDIR/$arch-unmets.plus
	comm -23 $TMPDIR/$arch-unmets.{old,new} >$TMPDIR/$arch-unmets.minus
	if [ -s $TMPDIR/$arch-unmets.minus ]; then
		echo " $arch: old unmet dependencies resolved"
		cat $TMPDIR/$arch-unmets.minus
	fi >&2
	if [ -s $TMPDIR/$arch-unmets.plus ]; then
		echo " *** $arch: new unmet dependencies detected"
		cat $TMPDIR/$arch-unmets.plus
		rc=1
	fi >&2
done

exit $rc
