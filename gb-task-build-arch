#!/bin/sh -efu

. shell-quote

arch="$1"; shift

. gb-sh-remote-conf

# Prepare remote node to build $arch packages for $GB_REPO_NAME repository.
ssh "$remote_host" ./gb-remote-plant \
	"\"$(quote_shell "$GB_REPO_DIR")\"" "\"$(quote_shell "$arch")\""

. gb-sh-functions

for i in $(gear_nums); do
	$0-i "$arch" "$i"
done
