#!/bin/sh -efu

. girar-sh-functions
PROG='girar-task share'

usage()
{
	[ -z "$*" ] || message "$*"
	echo >&2 "usage: $PROG [<task-id>]"
	exit 1
}

if [ "${1-}" = '--help' ]; then
	usage
fi

if [ "$#" -gt 1 ]; then
	usage 'Too many arguments.'
fi

id=$(PROG="$PROG" girar-task-find-current "$@")

cd "$GB_TASKS/$id"
# obtain an exclusive lock on the TASKS structure
builtin lockf -nv . ||
	fatal "task #$id is locked"

chmod 775 gears
