#!/bin/sh -efu

. girar-sh-functions

usage()
{
	[ -z "$*" ] || message "$*"
	echo >&2 "usage: $PROG {new|add|ls|show|run|rm} ..."
	exit 1
}

if [ "$#" -lt 1 ]; then
	usage 'Not enough arguments.'
fi

op="$1"; shift

case "${1-}" in
	--help|help|'')
		usage ;;
	new|add|ls|show|run|rm)
		umask 002
		exec "$PROG-$op" "$@"
		;;
	*)
		usage "invalid operation: $op"
		;;
esac
