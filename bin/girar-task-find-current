#!/bin/sh -efu

. girar-sh-functions

cd "$GB_TASKS"

if [ $# -gt 0 ]; then
	id="$1"
	shift
	[ -n "$id" -a -z "$(printf %s "$id" |tr -d '[:digit:]')" ] ||
		fatal "invalid task id: $id"
else
	id="$(set +f; fgrep -lx "$GIRAR_USER" [1-9]*/task/owner 2>/dev/null |
	       sort -n |cut -d/ -f1 |tail -n1)"
	[ -n "$id" ] ||
		fatal 'no tasks found'
fi

[ -d "$id" ] ||
	fatal "task not found: $id"
[ -s "$id"/task/owner ] ||
	fatal "invalid task: $id"

printf %s "$id"
