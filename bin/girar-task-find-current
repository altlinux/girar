#!/bin/sh -efu

. girar-sh-functions

cd "$GIRAR_TASKS"

if [ $# -gt 0 ]; then
	id="$1"
	shift
	[ -n "$id" -a -z "$(printf %s "$id" |tr -d '[:digit:]')" ] ||
		fatal "invalid task id: $id"
else
	id="$(set +f; fgrep -l -x "$GIRAR_USER" [1-9]*/task/owner |
	       sort -n |cut -d/ -f1 |tail -n1)"
	[ -n "$id" ] ||
		fatal 'no tasks found'
fi

[ -d "$id" ] ||
	fatal "task not found: $id"

echo "$id"
