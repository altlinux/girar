#!/bin/sh -efu

fatal()
{
	echo "${0##*/}: $*" >&2
	exit 1
}

usage()
{
	echo "${0##*/}: $*" >&2
	echo "usage: ${0##*/} [<directory>]" >&2
	exit 1
}

[ "$#" -le 1 ] ||
	usage 'Too many arguments.'

[ -n "${USER:-}" ] ||
	fatal 'USER undefined'
cd "/people/${USER#git_}"

if [ "$#" -ge 1 ]; then
	dir="$1" && shift
	printf %s "$dir" |egrep -qs '^[A-Za-z0-9/][-A-Za-z0-9_./]+$' ||
		fatal "$dir: invalid directory name"
else
	dir=.
fi

[ -d "$dir" ] ||
	fatal "$dir: directory not available"

[ -z "${dir%%*/}" ] || dir="$dir/"
[ -n "${dir##/*}" -o -z "${dir##/people/*}" ] ||
	fatal "$dir: invalid directory name"
d="$(readlink -e "$dir")/" ||
	fatal "$dir: directory not available"
p="$(readlink -e /people)" ||
	fatal "$dir: directory not available"
[ -z "${d##$p/*}" ] ||
	fatal "$dir: invalid directory name"

exec ls -log -- "$dir"
