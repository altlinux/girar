#!/bin/sh -efu

PROG='girar-event-hook'

event="$1"; shift
action="$1"; shift

case "$event" in
	task)
		girar-webapi-task "$action" "$@" ||:
		girar-amqp-task "$action" "$@" ||:
		;;
	subtask)
		girar-webapi-subtask "$action" "$@" ||:
		girar-amqp-subtask "$action" "$@" ||:
		;;
	acl)
		girar-amqp-acl "$action" "$@" ||:
		;;
esac >/dev/null 2>&1
