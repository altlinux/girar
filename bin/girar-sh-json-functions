#!/bin/sh -efu

delim=
print_json() {
	local type name value

	type="$1"; shift
	name="$1"; shift
	value="$1"; shift

	if [ "$type" = 'string' ]; then
		[ -n "${value##*[\"\\]*}" ] ||
			value="$(printf '%s' "$value" |sed -e 's,[\"\\],\\&,g')"
		value="$(printf '"%s"' "$value" |tr -s '[:space:]' ' ')"
	elif [ "$type" = 'array' ]; then
		[ -n "${value##*[\"\\]*}" ] ||
			value="$(printf '%s' "$value" |sed -e 's,[\"\\],\\&,g')"
		value="[$(printf '%s' "$value" | tr -s '[:space:]' ' ' |
					sed -e 's/^ */\"/' -e 's/ *$/\"/' -e 's/ /\",\"/g')]"
	elif [ "$type" = 'base64' ]; then
		value="\"$(printf '%s' "$value" | base64 - | tr -d '[:space:]')\""
	fi

	printf '%s"%s":%s\n' "$delim" "$name" "$value"
	delim=','
}

print_json_file() {
	local type="$1"; shift
	local filename="$1"; shift
	local name="$1"; shift
	local default="${1-}"

	local value=

	[ ! -s "$filename" ] ||
		value="$(cat "$filename")"

	print_json "$type" "$name" "${value:-$default}"
}
